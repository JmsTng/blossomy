{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "blossomy",
  "version": "0.1.0",
  "identifier": "com.james.blossomy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
	"transparent": true,
	"decorations": false,
	"resizable": true,
 	"width": 800,
	"height": 600,
	"title": "blossomy"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
